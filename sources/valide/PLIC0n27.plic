//Declaration de 1 entier & 2 tableaux, assignation de 2 tableaux (entre eux), ecriture des tableaux
programme PLICcoucou {

	entier c ;				//0 -> 4

	tableau [ 5 ] a ;		//4 --> 24
	tableau [ 5 ] b ;		//24 --> 44
	
	c := 2 ;
	
	a [ 2 ] := 8 ;			//12
	b [ 3 ] := a [ 2 ] ;	//36  & 12
	
	ecrire a [ 2 ] ;
	ecrire b [ 3 ] ;
	
	//Attendu :
	//8
	//8
}